}
/*estilos para el titulo*/
h1{
    /*centra el texto*/
    text-align: center;
    /*color oscuro para el texto*/
    color: #333;
}
/*estilos para la etiqueta de los campos*/
label{
    /*hacen que las etiquetas esten en linea bloque*/
    display: block;
    /*aplicar un espacio debajo de cada etiqueta*/
    margin-bottom: 5px;
    /*aplicar un color al texto gris*/
    color: #555;
}
/*estilos para los campos de entrada*/
input[type="text"],
input[type="email"],
input[type="number"], select{
    /*hace que los campos ocupen todo el ancho disponible*/
    width: 100%;
    /*relleno interno para los campos*/
    padding: 10px;
    /*espacio entre los campos*/
    margin-bottom: 15px;
    /*aplicar un borde gris para los campos*/
    border: 1px solid #ccc;
    /*aplicar bordes ligeramente redondeados*/
    border-radius: 4px;
}

/*estilo para el boton de envio*/
button{
    background-color: #4caf50;
    /*texto blanco*/
    color: white;
    /*espaciado interno*/
    padding: 10px 20px;
    /*sin border*/
    border: none;
    /*border redondeados*/
    border-radius: 4px;
    /*luego cambia el cursor del mause ala pasar por el*/
    cursor: pointer;
    /*hace que el boton ocupe todo el espacio del hancho disponible*/
    width: 100%;
    /*aunmentamos el taman√±o de la fuente*/
    font-size: 16px;
